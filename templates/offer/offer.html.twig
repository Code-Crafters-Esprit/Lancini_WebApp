<div class="container mt-3" >
	<div class="d-flex justify-content-between">
		<a href="{{ path('addOffer') }}" class="btn btn-sm"  data-toggle="tooltip" data-placement="top"  title="do you want to add o new offer ?" >Add</a>
		<div >
			<div class="col-4">
				{{ knp_pagination_render(offers) }}
			</div>
		</div>
	</div>

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<div class="row d-flex justify-content-between mt-5">
		{% if offers|length > 0 %}
			{% for offer in offers %}
				<div class="card border-secondary mb-3 card-element" style="width: 20rem; height: 20rem">
					<div class="card-header text-center text-white" style="background: #122b40">
						<h5>{{ offer.nom }}</h5>
					</div>
					<div class="card-body text-secondary d-flex flex-column justify-content-between">
						<div>
							<h6 class="card-title">Description</h6>
							<p class="card-text">{{ offer.description }}</p>
						</div>
					</div>
					<div class="d-flex justify-content-center m-3">
						<a href="{{ path('offerDetails', {'id': offer.idOffre}) }}" class="btn btn-primary btn-sm" style="background: #5680E9" data-toggle="tooltip" data-placement="top" title="Do you want to see more details of this offer ?">See more</a>
					</div>
				</div>
			{% endfor %}
		{% else %}
			<div class="container  text-center">
				<h1>No Data Found</h1>
			</div>
		{% endif %}
	</div>


