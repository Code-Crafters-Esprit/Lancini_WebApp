<div class="d-flex justify-content-around">
	<div class="container">
		<form>
			<div class="form-row">

				{{ form_start(f) }}

				<div class="col-md-4 mb-3">
					{{ form_label(f.secteur) }}
					{{ form_widget(f.secteur, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="col-md-4 mb-3">
					{{ form_label(f.typeoffre) }}
					{{ form_widget(f.typeoffre) }}
				</div>

				<div class="col-md-4 mb-3">
					{{ form_label(f.searchBar) }}
					<div class="input-group">
						{{ form_widget(f.searchBar, {'attr': {'class': 'form-control'}}) }}
