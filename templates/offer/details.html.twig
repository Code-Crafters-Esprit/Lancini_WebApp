<div class="container mt-3">
    <div class="d-flex flex-row-reverse bd-highlight">
        <a href="{{path('OfferUpdate',{'id':offer.idOffre})}}" class="btn  btn-link" style="color: #3a863a" data-toggle="tooltip" data-placement="top"  title="update this offer" > Update</a>
        <a href="#" class="btn  btn-link" style="color: #fd2e0b"  data-toggle="modal" data-target="#confirmDeleteModal{{ offer.idOffre }}" data-placement="top"  title="Remove ?">Remove</a>

    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <body style="background-color: #E5EAF0;">

    <div class="modal fade" id="confirmDeleteModal{{ offer.idOffre }}" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this offer ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a href="{{ path('OfferRemove', {'id': offer.idOffre}) }}" class="btn btn-danger">Remove</a>
                </div>
            </div>
        </div>
    </div>
    <script>
      $(document).ready(function () {
        $('#confirmationModal').on('show.bs.modal', function (event) {
          var button = $(event.relatedTarget) // Button that triggered the modal
          var url = button.attr('href') // Extract url from href attribute
          var modal = $(this)
          modal.find('form').attr('action', url) // Set the form action to the extracted url
        })
      });
    </script>
            <div class="card border-secondary mb-3 mt-5 card-element" style="width: 70rem; height: 40rem"  >
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="mr-auto">
                        <h5>{{ offer.nom }}</h5>
                    </div>
                    <div>
                        <a class="btn btn-link mr-3" href="{{ path('qrCode', {'idOffre': offer.idOffre}) }}" style="color: #0b0b0b;">QR code</a>
                        <a class="btn btn-link" href="{{ path('Offer.pdf', {'id': offer.idOffre}) }}" style="color: #0b0b0b;" data-toggle="tooltip" data-placement="top" title="Export PDF">PDF</a>
                    </div>
                </div>

                <div class="card-body text-secondary d-flex flex-column justify-content-between">
                    <div>

                        <h5 class="card-title">Description :</h5>
                        <p class="card-text">{{ offer.description }}</p>
                        <h5 class="card-title">Secteur : </h5>
                        <p class="card-text">{{ offer.secteur.nom }}</p>
                        <h5 class="card-title">Type d'offre :</h5>
                        <p class="card-text">{{ offer.typeOffre }}</p>
                        <h5 class="card-title">Date de debut : </h5>
                        <p class="card-text">{{ offer.dateDebut|date }}</p>
                        <h5 class="card-title">Date de fin :</h5>
                        <p class="card-text">{{ offer.dateFin|date }}</p>
                        <h5 class="card-title">Proprietaire :</h5>
                        <p class="card-text">{{ offer.proprietaire.nom }}</p>
                        <h5 class="card-title">Comp√©tence : </h5>
                        <p class="card-text">{{ offer.competence }}</p>

                        <div class="card-footer d-flex justify-content-end mt-auto">
                            {% if qrCode is defined and qrCode is not empty %}
                                <img src="{{ qrCode }}" alt="QR Code">
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
