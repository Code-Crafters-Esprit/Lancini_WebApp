<div class="container mt-3"  >
    <h1 >Offer {{ offer.nom }} details</h1>
</div>
<div class="container mt-3">
    <div class="d-flex flex-row-reverse bd-highlight">
        <a href="{{path('offerDetailsEmp',{'id':offer.idOffre})}}" class="btn  btn-link" style="color: #3a863a" data-toggle="tooltip" data-placement="top"  title="update this offer" > Apply</a>

    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <body style="background-color: #E5EAF0;"> <!-- Ajoutez ceci pour changer la couleur de fond -->

    <script>
      $(document).ready(function () {
        $('#confirmationModal').on('show.bs.modal', function (event) {
          var button = $(event.relatedTarget) // Button that triggered the modal
          var url = button.attr('href') // Extract url from href attribute
          var modal = $(this)
          modal.find('form').attr('action', url) // Set the form action to the extracted url
        })
      });
    </script>
    <div class="card border-secondary mb-3 mt-5 card-element " style="width: 70rem; height: 40rem"  >
        <div class="card-header">
            <h5>{{ offer.nom }}</h5>
        </div>
        <div class="card-body text-secondary d-flex flex-column justify-content-between">
            <div>

                <h5 class="card-title">Description :</h5>
                <p class="card-text">{{ offer.description }}</p>
                <h5 class="card-title">Secteur : </h5>
                <p class="card-text">{{ offer.secteur.nom }}</p>
                <h5 class="card-title">Type d'offre :</h5>
                <p class="card-text">{{ offer.typeOffre }}</p>
                <h5 class="card-title">Date de debut : </h5>
                <p class="card-text">{{ offer.dateDebut|date }}</p>
                <h5 class="card-title">Date de fin :</h5>
                <p class="card-text">{{ offer.dateFin|date }}</p>
                <h5 class="card-title">Proprietaire :</h5>
                <p class="card-text">{{ offer.proprietaire.nom }}</p>
                <h5 class="card-title">Comp√©tence : </h5>
                <p class="card-text">{{ offer.competence }}</p>

            </div>
        </div>
    </div>
