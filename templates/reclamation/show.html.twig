    style="width:100px;height:100px">
</lord-icon>

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/showrec.css') }}">

    <table class="table centered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reclamation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ reclamation.prenom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
            <tr>
                <th>Sujetdereclamations</th>
                <td>{{ reclamation.sujetdereclamations }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reclamation.email }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ reclamation.tel }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.etat }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('reclamation/_delete_form.html.twig') }}
