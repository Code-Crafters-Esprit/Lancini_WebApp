{% extends 'template.html.twig' %}
{% block body %}
    
<script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/indexrec.css') }}">
<div class="container">
  <div class="title-wrapper">
    <h1 class="title">Wanna claim something !</h1>
    <a href="{{ path('app_reclamation_new') }}" class="create-link">
    <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/inrunzby.json"
    trigger="loop"
    delay="1000"
    colors="primary:#ffc738,secondary:#92140c"
    style="width:100px;height:90px">
</lord-icon>
      
      Create new claim
    </a>
    
 
  </h1>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Last name</th>
        <th>Description</th>
        <th>Reason for enquiry</th>
        <th>Email address</th>
        <th>Phone</th>
        <th>State</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    {% for reclamation in reclamations %}
      <tr>
        <td>{{ reclamation.id }}</td>
        <td>{{ reclamation.nom }}</td>
        <td>{{ reclamation.prenom }}</td>
        <td>{{ reclamation.description }}</td>
        <td>{{ reclamation.sujetdereclamations }}</td>
        <td>{{ reclamation.email }}</td>
        <td>{{ reclamation.tel }}</td>
        <td>{{ reclamation.etat }}</td>
        <td>
          <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
          <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="9">No records found</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  
</div>

<script>
  // JavaScript code for animation
  const title = document.querySelector('.title');
  title.addEventListener('mouseover', () => {
    title.classList.add('animated', 'heartBeat');
  });
  title.addEventListener('mouseout', () => {
    title.classList.remove('animated', 'heartBeat');
  });

  const create = document.querySelector('.create');
  create.addEventListener('mouseover', () => {
    create.classList.add('animated', 'pulse');
  });
  create.addEventListener('mouseout', () => {
    create.classList.remove('animated', 'pulse');
  });
</script>
