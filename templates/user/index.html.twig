{% extends 'admin/base.html.twig' %}

{% block title %}
	<Title>Lancini</title>
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="{{ asset('admin/user.css') }}">
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">


			<h1>Users List</h1>
			<div class="table-responsive margin-bottom-24">
				<table class="table">
					<thead>
						<tr>
							<th>IdUser</th>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Email</th>
							<th>Motdepasse</th>
							<th>Role</th>
							<th>Bio</th>
							<th>Photopath</th>
							<th>Numtel</th>
							<th>IsVerified</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.getIduser }}</td>
								<td>{{ user.getNom }}</td>
								<td>{{ user.getPrenom }}</td>
								{# <td>{{ user.getRoles ? user.getRoles|json_encode : '' }}</td> #}
								<td>{{ user.getEmail }}</td>
								<td>{{ user.getMotdepasse }}</td>
								<td>{{ user.getRole }}</td>
								<td>{{ user.getBio }}</td>
								<td>{{ user.photopath }}</td>
								<td>{{ user.getNumtel }}</td>
								<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
								<td>
									<div class="template-demo">
										<a class="btn btn-primary btn-icon-text" href="{{ path('app_user_show', {'idUser': user.idUser}) }}">
											<i class="ti-user"></i>Show
										</a>
										<a class="btn btn-dark btn-icon-text" href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">
											<i class="ti-file btn-icon-append"></i>
											Edit</a>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="12">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<a class="btn btn-primary" href="{{ path('app_user_new') }}">Create new</a>
		</div>
	</div>
{% endblock %}
