{% extends 'admin/base.html.twig' %}

{% block title %}
	<title>{{ user.nom ~ " " ~ user.prenom }}</title>
{% endblock %}

{% block body %}
	<h1>{{ user.nom ~ " " ~ user.prenom }}</h1>
	{% if user.photopath %}
		<img src="{{ asset('uploads/user_photos/' ~ user.photopath) }}" alt="Profile photo">
	{% else %}
		<p>No profile photo available</p>
	{% endif %}

	<table class="table">
		<tbody>
			<tr>
				<th>IdUser</th>
				<td>{{ user.idUser }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.prenom }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Motdepasse</th>
				<td>{{ user.motdepasse }}</td>
			</tr>
			<tr>
				<th>Role</th>
				<td>{{ user.role }}</td>
			</tr>
			<tr>
				<th>Bio</th>
				<td>{{ user.bio }}</td>
			</tr>
			<tr>
				<th>Photopath</th>
				<td>{{ user.photopath }}</td>
			</tr>
			<tr>
				<th>Numtel</th>
				<td>{{ user.numtel }}</td>
			</tr>
			<tr>
				<th>IsVerified</th>
				<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_user_index') }}">back to list</a>

	<a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">edit</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
