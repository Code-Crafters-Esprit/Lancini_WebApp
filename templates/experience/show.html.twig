{% extends 'admin/base.html.twig' %}

{% block title %}User Experiences
{% endblock %}

{% block body %}
	<h1>Experience Table</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Idexperience</th>
				<td>{{ experience.idexperience }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ experience.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ experience.description }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ experience.type }}</td>
			</tr>
			<tr>
				<th>Lieu</th>
				<td>{{ experience.lieu }}</td>
			</tr>
			<tr>
				<th>Secteur</th>
				<td>{{ experience.secteur }}</td>
			</tr>
			<tr>
				<th>Datedebut</th>
				<td>{{ experience.datedebut ? experience.datedebut|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Datefin</th>
				<td>{{ experience.datefin ? experience.datefin|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-light" href="{{ path('app_experience_index') }}">Back to list</a>

	<a class="btn btn-info" href="{{ path('app_experience_edit', {'idexperience': experience.idexperience}) }}">Edit</a>

	{{ include('experience/_delete_form.html.twig') }}
{% endblock %}
