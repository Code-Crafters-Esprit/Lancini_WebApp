{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="container mt-3"  style="max-width: 20rem; color: #5680E9 " >
        <h1 >Available Offers</h1>
    </div>
        <a href="{{ path('app_admin_addOffer') }}" class="btn btn-sm warning"  data-toggle="tooltip" data-placement="top"  title="do you want to add o new offer ?" >Add</a>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <div class="row d-flex justify-content-between mt-5" class="my-element">
            {% for offer in offers%}
                <div class="card border-secondary mb-3 card-element" style="width: 20rem; height: 20rem">
                    <div class="card-header  d-flex justify-content-between">
                        <h5>{{ offer.nom }}</h5>
                        <a href="{{path('Offer.pdf',{'id':offer.idOffre})}}" class="btn  btn-link" style="color: #0b0b0b" data-toggle="tooltip" data-placement="top"  title="Export" > PDF</a>
                    </div>
                    <div class="card-body text-secondary d-flex flex-column justify-content-between">
                        <div>
                            <h6 class="card-title">Description</h6>
                            <p class="card-text">{{ offer.description }}</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center m-3">
                        <a href="{{ path('app_admin_detailsOffer',{'id':offer.idOffre}) }}" class="btn btn-primary btn-sm"  style="background: #5680E9"  data-toggle="tooltip" data-placement="top"  title="Do you want to see more details of this offer ? ">See more</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

{% endblock %}