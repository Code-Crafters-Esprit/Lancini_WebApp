{% extends 'admin/base.html.twig' %}








{% block body %}


<div> <br><br></div>
<div class="main_blog text-center roomy-100">
							<div class="col-sm-8 col-sm-offset-2">
								<div class="head_title text-center">
									<h1>Welcome</h1>
									<div class="separator_auto"></div>
									<h3>Please make the necessary changes</h3>
								</div>
							</div>

<div> <br><br><br><br><br><br><br><br></div>


<div class="main_contact roomy-100 text-black">
							
							<div class="col-md-8 sm-m-top-30">
								{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
									<div class="row">
										<div class="col-sm-6">
											<div class="form-group">
											    {{form_label(form.libelle,"Title : ")}}
												{{form_widget(form.libelle,{'att':{'class':'form-control'}})}}
												{{form_errors(form.libelle,{'attr':{'class':'text-danger'}})}}
											</div>
										</div>

                                        <div class="col-sm-6">
											<div class="form-group">
											 {{form_label(form.datepub,"Date : ")}}
												{{form_widget(form.datepub,{'att':{'class':'form-control'}})}}
											</div>
										</div>

                                        <div class="col-sm-6">
											<div class="form-group">
											 {{form_label(form.description,"Description : ")}}
												{{form_widget(form.description,{'att':{'class':'form-control'}})}}
											</div>
										</div>

                                        <div class="col-sm-6">
											<div class="form-group">
											   {{form_label(form.cat,"Category : ")}}
												{{form_widget(form.cat,{'att':{'class':'form-control'}})}}
											</div>
										</div>

										

									</div>

								{{form_end(form)}}
							</div>
						</div>

{% endblock %}















