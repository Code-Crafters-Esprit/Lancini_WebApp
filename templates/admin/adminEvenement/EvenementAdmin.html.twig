                            </form>
                            </td> 

{# <td> <a class="btn btn-sm btn-outline-info btn-info  mr-4 "href="{{ path('modifierEvenement',{'idevent': e.idevent})}}"> update</a>  </td> #}
<td> <a class="btn  btn-sm btn btn-outline-danger btn-info  mr-4 "  href="{{ path('supprimerEvenement',{'idevent': e.idevent})}}"> delete</a> </td>
</tr>
{% endfor %}

</tbody>
</table>
