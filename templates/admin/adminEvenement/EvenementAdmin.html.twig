{% extends 'admin/index.html.twig' %}







{% block body %}
<div class="header bg-primary pb-6">
<div class="container-fluid">
<div class="header-body">
<div class="row align-items-center py-4">
</div>
</div>
</div>
</div>



<div class="col" style =  "margin-top: -50px; ">
<div class="card bg-default shadow">
<div class="card-header bg-transparent border-0">
<h3 class="text-white mb-0">content list</h3>
 <div style="float: right" class="col-4 text-right">
                  <a href="{{path('creer_evenement')}}"  class="btn btn-sm btn-primary">Add new Event</a>
                </div>
</div>

<div class="table-responsive"   >
<table class="table align-items-center table-dark table-flush">
<thead class="thead-dark">
<tr>
<th scope="col" class="sort" data-sort="name">User</th>
<th scope="col" class="sort" data-sort="name">ID Event</th>
<th scope="col" class="sort" data-sort="name">Title</th>
