{% extends 'user/login.html.twig' %}

{% block title %}Register
{% endblock %}


{% block body %}

	{% block formbg %}
		<div class="max-width--840 formbg">
		{% endblock %}

		{{ form_start(registrationForm) }}
		{% block form %}
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
			<span class="padding-bottom--15 padding-top--24 padding-horizontal--48">Register your account</span>
			<form method="POST" id="register-form">
				<div class="formbg-inner flex-flex">

					<div class="formbg-inner padding-horizontal--48">

						<div class='field'>
							{{ form_widget(registrationForm._token) }}
							{{ form_row(registrationForm.nom) }}
							{{ form_row(registrationForm.prenom) }}
							{{ form_row(registrationForm.email) }}
						</div>
						{# <div class='field_checkbox'>
																																																																																									{{ form_row(registrationForm.agreeTerms) }}
																																																																																								</div> #}
					</div>
					<div class="formbg-inner padding-horizontal--48">
						<div class='field'>
							{{ form_row(registrationForm.role, {
					label: 'You are looking for..?',
				}) }}
							{{ form_row(registrationForm.plainPassword, {
					label: 'Password',
				}) }}
							{{ form_row(registrationForm.confirmPassword, {
					label: 'Confirm Password',
				}) }}
						</div>
						{# <div class='field_checkbox'>
																																																																																													{{ form_row(registrationForm.agreeTerms) }}
																																																																																												</div> #}
						<div class="field padding-bottom--24 padding-top--24">
							<button type="submit" class="btn">Register</button>
						</div>
					</div>
				</div>
			</form>

		{% endblock %}
		{{ form_rest(registrationForm) }}
		{{ form_end(registrationForm) }}
	{% endblock %}

	{% block footer %}
		<div class="footer-link padding-top--24">
			<span>Already have an account?
				<a href="{{ path('app_login') }}">Sign in</a>
			</span>

		</div>
	{% endblock %}
