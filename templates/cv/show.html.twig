{% extends 'template.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    <h1>Cv</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cin</th>
                <td>{{ cv.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cv.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ cv.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ cv.sexe }}</td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{{ cv.datenaissance ? cv.datenaissance|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
  <img style="border-radius: 50%; margin: auto auto auto 0; display: block;" src="{{ asset('uploads/' ~ cv.photo) }}" alt="" width="100" height="100"/></td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ cv.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cv.email }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ cv.langue }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ cv.education }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cv_index') }}">back to list</a>

    <a href="{{ path('app_cv_edit', {'idcv': cv.idcv}) }}">edit</a>

    {{ include('cv/_delete_form.html.twig') }}
{% endblock %}
