<!DOCTYPE html>

<title>Maillist index</title>

{% block body %}
    <h1>Maillist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maillist in maillists %}
            <tr>
                <td>{{ maillist.id }}</td>
                <td>{{ maillist.email }}</td>
                <td>
                    <a href="{{ path('app_maillist_show', {'id': maillist.id}) }}">show</a>
                    <a href="{{ path('app_maillist_edit', {'id': maillist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_maillist_new') }}">Create new</a>
{% endblock %}
